server {
    listen 443 ssl;
    listen [::]:443 ssl;

    resolver 127.0.0.11 valid=5s ipv6=off;

    server_name {{ env['NGINX_SERVER_HOST'] }};

    # Load the certificate files.
    ssl_certificate         /etc/letsencrypt/live/{{ env['NGINX_SERVER_HOST'] }}/fullchain.pem;
    ssl_certificate_key     /etc/letsencrypt/live/{{ env['NGINX_SERVER_HOST'] }}/privkey.pem;
    ssl_trusted_certificate /etc/letsencrypt/live/{{ env['NGINX_SERVER_HOST'] }}/chain.pem;

    # Load the Diffie-Hellman parameter.
    ssl_dhparam /etc/letsencrypt/dhparams/dhparam.pem;

    location  /favicon.ico {
        access_log off;
        log_not_found off;
    }

    location /static/ {
        alias /app/staticfiles/;
    }

    location /media/ {
        alias /app/mediafiles/;
    }

    location / {
        set $proxy_upstream {{ env['NGINX_PROXY_PASS'] }};
        proxy_pass $proxy_upstream$request_uri;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $host;
        proxy_redirect off;
    }

}
